{
  "name": "portfolio",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "author": "Chris Sheppard <chris@chrissheppard.co.uk> (http://www.chrissheppard.co.uk/)",
  "license": "GPLv3",
  "scripts": {
    "start": "cross-env NODE_ENV=production npm run build && npm run server:start",
    "start:dev": "cross-env NODE_ENV=development concurrently --kill-others \"npm run server:watch\" \"npm run webpack:watch\"",
    "build": "cross-env NODE_ENV=production npm run webpack:build",
    "build:dev": "cross-env NODE_ENV=development npm run webpack:build",
    "server:start": "babel-node src",
    "server:watch": "nodemon --watch src --exec babel-node src",
    "webpack:build": "webpack --config webpack/webpack.config.js",
    "webpack:watch": "webpack-dev-server --config webpack/webpack.config.js",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg"
  },
  "devDependencies": {
    "babel-core": "6.22.1",
    "babel-loader": "6.2.10",
    "babel-plugin-transform-async-to-generator": "6.22.0",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-react": "6.22.0",
    "html-webpack-plugin": "2.26.0",
    "husky": "^0.13.1",
    "nodemon": "^1.11.0",
    "react-hot-loader": "^1.3.1",
    "validate-commit-msg": "^2.11.1",
    "webpack": "2.2.0",
    "webpack-dev-server": "2.2.0"
  },
  "dependencies": {
    "babel-cli": "6.22.2",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-plugin-transform-runtime": "6.22.0",
    "babel-polyfill": "6.22.0",
    "concurrently": "^3.1.0",
    "cross-env": "3.1.4",
    "css-loader": "^0.26.1",
    "express": "4.14.0",
    "extract-text-webpack-plugin": "2.0.0-rc.2",
    "lodash": "4.17.4",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "react-redux": "5.0.2",
    "react-router": "3.0.2",
    "redux": "3.6.0",
    "redux-connect": "^5.0.0",
    "redux-thunk": "2.2.0",
    "seamless-immutable": "7.0.1",
    "serialize-javascript": "^1.3.0",
    "style-loader": "^0.13.1",
    "webpack-isomorphic-tools": "^2.6.6",
    "webpack-split-by-path": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
